{
  "env": {
    "browser": true,
    "node": true,  // Add this line to support Node.js globals
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
"plugins": [
    "react"
  ],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "no-unused-vars": ["warn"],
    "no-trailing-spaces": "error",
    "semi": ["error", "always"],
    "no-console": "off",
    "prefer-const": "warn",
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
